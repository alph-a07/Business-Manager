<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:animateLayoutChanges="true"
    tools:context=".BusinessDetailsActivity">

    <ImageView
        android:id="@+id/iv_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_back_arrow"
        android:layout_alignBottom="@id/iv_back_arrow"
        android:layout_toEndOf="@id/iv_back_arrow"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_vertical"
        android:text="Registration details"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/iv_back_arrow"
        android:layout_alignStart="@id/iv_back_arrow"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
        app:srcCompat="@color/primary_blue" />

    <TextView
        android:id="@+id/tv_business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_logo"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/iv_logo"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_business_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_business_name"
        android:layout_alignStart="@id/tv_business_name"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/roboto"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="@color/Dim_Gray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_business_revenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_business_category"
        android:layout_alignStart="@id/tv_business_category"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto"
        android:text="TextView"
        android:textColor="@color/Dim_Gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_business_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo"
        android:layout_alignStart="@id/iv_logo"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/roboto"
        android:text="The mysterious dimension of emptiness is to avoid with intuition.Going to the body of result doesnâ€™t illuminate man anymore than visualizing creates inward love."
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_business_info"
        android:layout_alignStart="@id/tv_business_info"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/ic_baseline_web_24"
        app:tint="@color/Dim_Gray" />

    <TextView
        android:id="@+id/tv_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageView"
        android:layout_alignBottom="@id/imageView"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/imageView"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:text="Ubi est fatalis elogium?"
        android:textColor="@color/Dim_Gray"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_website"
        android:layout_alignStart="@id/tv_business_info"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_baseline_location_24"
        app:tint="@color/Dim_Gray" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageView4"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/imageView4"
        android:fontFamily="@font/roboto"
        android:text="Pins rise with desolation! Always oddly love the unbiased seeker.Cursus assimilants, tanquam rusticus scutum."
        android:textColor="@color/Dim_Gray"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_location"
        android:layout_alignStart="@id/tv_business_info"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_baseline_email_24"
        app:tint="@color/Dim_Gray" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageView6"
        android:layout_alignBottom="@id/imageView6"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/imageView6"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:text="Messor ferox coordinatae est."
        android:textColor="@color/Dim_Gray"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_email"
        android:layout_alignStart="@id/tv_business_info"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_baseline_phone_24"
        app:tint="@color/Dim_Gray" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageView7"
        android:layout_alignBottom="@id/imageView7"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/imageView7"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:text="+00 00000 00000"
        android:textColor="@color/Dim_Gray"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_phone"
        android:layout_alignStart="@id/tv_business_info"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_baseline_gstin_24"
        app:tint="@color/Dim_Gray" />

    <TextView
        android:id="@+id/tv_gstin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/imageView8"
        android:layout_alignBottom="@id/imageView8"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/imageView8"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:text="4D8D7ER45FVB125"
        android:textColor="@color/Dim_Gray"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#0D000000"
            android:src="@drawable/ic_outline_edit_24"
            app:contentPadding="10dp"
            app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
            app:tint="@color/Dim_Gray" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="#260024FF"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_baseline_delete_outline_24"
                    app:tint="@color/Dim_Gray" />

                <TextView
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:text="Retract your data"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>